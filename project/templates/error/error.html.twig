{% extends 'base.html.twig' %}

{% block title %}Error {{ code }} | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECEFCA] flex flex-col justify-center items-center p-4">
    <div class="max-w-lg w-full bg-white rounded-lg shadow-lg p-8 text-center">
        <div class="mb-6">
            {% if code == 404 %}
                <i class="bi bi-question-circle text-6xl text-[#213448]"></i>
            {% elseif code == 403 %}
                <i class="bi bi-shield-lock text-6xl text-[#213448]"></i>
            {% elseif code == 401 %}
                <i class="bi bi-person-lock text-6xl text-[#213448]"></i>
            {% else %}
                <i class="bi bi-exclamation-triangle text-6xl text-[#213448]"></i>
            {% endif %}
        </div>

        <h1 class="text-4xl font-bold text-[#213448] mb-4">Error {{ code }}</h1>
        <p class="text-lg text-[#547792] mb-8">{{ message }}</p>
        
        <a href="{{ path('app_home') }}" class="inline-flex items-center px-6 py-3 border border-[#213448] text-base font-medium rounded-md text-[#213448] bg-white hover:bg-[#ECEFCA] transition-colors">
            <i class="bi bi-house-door me-2"></i>Volver al Inicio
        </a>
    </div>
</div>
{% endblock %}
