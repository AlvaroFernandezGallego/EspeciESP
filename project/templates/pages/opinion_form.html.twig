{% extends 'base.html.twig' %}

{% block title %}Enviar Opinión | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#fefefc] flex flex-col justify-center">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white shadow-lg rounded-lg p-8">
            <h1 class="text-3xl font-bold text-[#213448] mb-8 text-center">Envía tu Opinión</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-8 border-t-4 border-[#213448] shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)]'}}) }}
                <div>
                    {{ form_label(form.issue, null, {'label_attr': {'class': 'block text-lg font-medium text-[#213448] mb-2'}}) }}
                    {{ form_widget(form.issue, {'attr': {'class': 'w-full px-6 py-4 text-lg border border-[#ECEFCA] rounded-md shadow-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                    {{ form_errors(form.issue) }}
                </div>

                <div>
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-lg font-medium text-[#213448] mb-2'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'w-full px-6 py-4 text-lg border border-[#ECEFCA] rounded-md shadow-sm focus:ring-[#547792] focus:border-[#547792] h-48'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <p class="text-sm text-red-600 mt-6">
                    <i class="bi bi-exclamation-circle me-1"></i>
                    Los mensajes deben mantener un tono respetuoso y constructivo. No se permiten insultos, lenguaje ofensivo, 
                    spam o contenido inapropiado. El incumplimiento de estas normas resultará en la inhabilitación inmediata 
                    de la cuenta asociada al mensaje.
                </p>

                <div class="flex justify-end space-x-4 mt-8">
                    <a href="{{ path('app_home') }}" class="px-6 py-3 text-lg border border-[#213448] text-[#213448] rounded-md hover:bg-[#ECEFCA] transition-colors">
                        Cancelar
                    </a>
                    <button type="submit" class="px-6 py-3 text-lg bg-[#213448] text-white rounded-md hover:bg-[#547792] transition-colors">
                        Enviar Opinión
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
