{% extends 'base.html.twig' %}

{% block title %}Editar Perfil | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECEFCA] flex flex-col justify-center">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6 sm:p-8">
                <div class="text-center mb-8">
                    <h1 class="text-2xl sm:text-3xl font-bold text-[#213448]">Editar Perfil</h1>
                </div>

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6 shadow-sm">
                        <div class="flex items-center">
                            <i class="bi bi-exclamation-circle text-xl me-3"></i>
                            <div>
                                <p class="text-sm font-medium">Error</p>
                                <p class="text-sm">{{ message }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-md mb-6 shadow-sm">
                        <div class="flex items-center">
                            <i class="bi bi-check-circle text-xl me-3"></i>
                            <div>
                                <p class="text-sm font-medium">Éxito</p>
                                <p class="text-sm">{{ message }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(form.username, 'Nombre de usuario', {'label_attr': {'class': 'block text-sm font-medium text-[#213448] mb-1'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                        {{ form_errors(form.username) }}
                    </div>

                    <div>
                        {{ form_label(form.new_password, 'Nueva contraseña (dejar en blanco para mantener la actual)', {'label_attr': {'class': 'block text-sm font-medium text-[#213448] mb-1'}}) }}
                        {{ form_widget(form.new_password, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                        {{ form_errors(form.new_password) }}
                    </div>

                    <div>
                        {{ form_label(form.new_password_confirm, 'Confirmar nueva contraseña', {'label_attr': {'class': 'block text-sm font-medium text-[#213448] mb-1'}}) }}
                        {{ form_widget(form.new_password_confirm, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                        {{ form_errors(form.new_password_confirm) }}
                    </div>

                    <div class="flex justify-end space-x-4">
                        <a href="{{ path('app_profile') }}" 
                           class="px-6 py-3 text-base font-medium text-[#213448] bg-white border border-[#213448] rounded-md hover:bg-[#ECEFCA] transition-colors">
                            Cancelar
                        </a>
                        <button type="submit" 
                                class="px-6 py-3 text-base font-medium text-white bg-[#213448] border border-transparent rounded-md hover:bg-[#547792] transition-colors">
                            Guardar cambios
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
