{% extends 'base.html.twig' %}

{% block title %}Registrar | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECEFCA] flex flex-col justify-center">
    <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="text-center mb-8">
            <h1 class="text-3xl sm:text-4xl font-semibold text-[#213448]">Registro</h1>
            <p class="mt-1 text-base sm:text-lg font-bold text-[#547792]">Crea una cuenta para continuar</p>
        </div>

        <div class="bg-white shadow-lg rounded-lg p-8">
            {% for message in app.flashes('error') %}
                <div class="bg-red-50 text-red-600 p-3 rounded-md mb-4 text-sm">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="bg-green-50 text-green-600 p-3 rounded-md mb-4 text-sm">
                    {{ message }}
                </div>
            {% endfor %}
            
            {{ form_start(registrationForm, {
                'attr': {
                    'class': 'space-y-6',
                    'data-turbo': 'false'
                }
            }) }}
                {% if error is defined and error %}
                    <div class="bg-red-50 text-red-600 p-3 rounded-md mb-4 text-sm">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div>
                    {{ form_label(registrationForm.username, 'Nombre de Usuario', {'label_attr': {'class': 'block text-sm sm:text-base font-medium text-[#213448] mb-1'}}) }}
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                    {{ form_errors(registrationForm.username) }}
                </div>

                <div>
                    {{ form_label(registrationForm.email, 'Correo Electrónico', {'label_attr': {'class': 'block text-sm sm:text-base font-medium text-[#213448] mb-1'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div>
                    {{ form_label(registrationForm.password, 'Contraseña', {'label_attr': {'class': 'block text-sm sm:text-base font-medium text-[#213448] mb-1'}}) }}
                    {{ form_widget(registrationForm.password, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                    {{ form_errors(registrationForm.password) }}
                </div>

                <div>
                    {{ form_label(registrationForm.password_confirmation, 'Confirmar Contraseña', {'label_attr': {'class': 'block text-sm sm:text-base font-medium text-[#213448] mb-1'}}) }}
                    {{ form_widget(registrationForm.password_confirmation, {'attr': {'class': 'w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]'}}) }}
                    {{ form_errors(registrationForm.password_confirmation) }}
                </div>

                <div>
                    <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-3 border border-transparent text-sm sm:text-base font-medium rounded-md text-[#ECEFCA] bg-[#213448] hover:bg-[#547792] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#547792] transition-colors duration-200">
                        <i class="bi bi-person-plus me-2"></i>Registrar Cuenta
                    </button>
                </div>
            {{ form_end(registrationForm) }}
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('app_home') }}" class="text-sm sm:text-base text-[#547792] hover:text-[#213448] transition-colors duration-200">
                <i class="bi bi-arrow-left me-1"></i>Volver al inicio
            </a>
        </div>
    </div>
</div>
{% endblock %}
