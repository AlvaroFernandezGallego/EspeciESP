{% extends 'base.html.twig' %}

{% block title %}Panel de Administración | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
            <div>
                <h1 class="text-2xl font-semibold text-[#213448]">Panel de Administración</h1>
                <p class="mt-1 text-sm text-[#547792]">Bienvenido al panel de gestión</p>
            </div>
            <div class="mt-4 md:mt-0">
                <a href="{{ path('app_logout') }}" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-[#ECEFCA] bg-[#213448] hover:bg-[#547792] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#547792] transition-colors duration-200">
                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white shadow-sm rounded-lg p-6">
                <div class="flex items-center mb-4">
                    <i class="bi bi-shield text-2xl text-[#213448] me-3"></i>
                    <h2 class="text-xl font-medium text-[#213448]">Especies</h2>
                </div>
                <p class="text-sm text-[#547792] mb-4">Gestiona las especies en peligro de extinción.</p>
                <a href="{{ path('app_species_index') }}" class="inline-flex items-center px-3 py-2 border border-[#547792] text-sm font-medium rounded-md text-[#547792] hover:text-[#ECEFCA] hover:bg-[#547792] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#547792] transition-colors duration-200">
                    <i class="bi bi-arrow-right me-2"></i>Gestionar Especies
                </a>
            </div>

            <div class="bg-white shadow-sm rounded-lg p-6">
                <div class="flex items-center mb-4">
                    <i class="bi bi-building text-2xl text-[#213448] me-3"></i>
                    <h2 class="text-xl font-medium text-[#213448]">Organizaciones</h2>
                </div>
                <p class="text-sm text-[#547792] mb-4">Gestiona las organizaciones colaboradoras.</p>
                <a href="{{ path('app_organizations_index') }}" class="inline-flex items-center px-3 py-2 border border-[#547792] text-sm font-medium rounded-md text-[#547792] hover:text-[#ECEFCA] hover:bg-[#547792] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#547792] transition-colors duration-200">
                    <i class="bi bi-arrow-right me-2"></i>Gestionar Organizaciones
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
