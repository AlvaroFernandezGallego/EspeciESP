{% extends 'base.html.twig' %}

{% block title %}Detalle del Mensaje{% endblock %}

{% block body %}
<div class="min-h-screen bg-white pt-24 pb-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-[#213448]">Detalle del Mensaje</h1>
                    <a href="{{ path('app_messages_index') }}" 
                       class="inline-flex items-center px-4 py-2 border border-[#213448] rounded-md text-[#213448] bg-white hover:bg-[#ECEFCA] transition-colors">
                        <i class="bi bi-arrow-left me-2"></i>Volver al listado
                    </a>
                </div>

                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-[#ECEFCA]/10 p-4 rounded-lg">
                            <h3 class="text-sm font-medium text-[#547792]">Usuario</h3>
                            <p class="mt-1 text-lg text-[#213448]">{{ message.user.username }}</p>
                        </div>
                        <div class="bg-[#ECEFCA]/10 p-4 rounded-lg">
                            <h3 class="text-sm font-medium text-[#547792]">Email</h3>
                            <p class="mt-1 text-lg text-[#213448]">{{ message.user.email }}</p>
                        </div>
                    </div>

                    <div class="bg-[#ECEFCA]/10 p-4 rounded-lg">
                        <h3 class="text-sm font-medium text-[#547792]">Fecha</h3>
                        <p class="mt-1 text-lg text-[#213448]">{{ message.createdAt|date('d/m/Y H:i') }}</p>
                    </div>

                    <div class="bg-[#ECEFCA]/10 p-4 rounded-lg">
                        <h3 class="text-sm font-medium text-[#547792]">Asunto</h3>
                        <p class="mt-1 text-lg text-[#213448]">{{ message.issue }}</p>
                    </div>

                    <div class="bg-[#ECEFCA]/10 p-4 rounded-lg">
                        <h3 class="text-sm font-medium text-[#547792]">Mensaje</h3>
                        <div class="mt-2 p-4 bg-white rounded-lg">
                            <p class="text-[#213448] whitespace-pre-line">{{ message.description }}</p>
                        </div>
                    </div>

                    <div class="pt-6 border-t border-[#ECEFCA]">
                        <form method="post" action="{{ path('app_messages_delete', {'id': message.id}) }}" 
                              onsubmit="return confirm('¿Estás seguro de que quieres eliminar este mensaje?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                            <button type="submit" 
                                    class="inline-flex items-center px-4 py-2 border border-red-600 text-red-600 rounded-md hover:bg-red-50 transition-colors">
                                <i class="bi bi-trash me-2"></i>Eliminar mensaje
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
