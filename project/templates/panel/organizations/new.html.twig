{% extends 'base.html.twig' %}

{% block title %}Nueva Organización{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-7xl mx-auto">
            {# Header with navigation #}
            <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center space-y-4 sm:space-y-0">
                <div class="flex items-center space-x-4">
                    <a href="{{ path('app_organizations_index') }}" class="flex items-center text-gray-600 hover:text-gray-900">
                        <i class="bi bi-arrow-left text-xl mr-2"></i>
                        <span class="text-sm font-medium">Volver</span>
                    </a>
                    <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Nueva Organización</h1>
                </div>
            </div>

            {# Main content #}
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6 bg-gray-50">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Información de la Organización</h3>
                    <p class="mt-1 text-sm text-gray-500">Complete los datos de la nueva organización.</p>
                </div>
                <div class="px-4 py-5 sm:p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
                            {% for field in form.children %}
                                <div class="{% if field.vars.name in ['name', 'address', 'website_url'] %}col-span-full{% endif %}">
                                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                    {{ form_widget(field, {'attr': {
                                        'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#213448] focus:ring-[#213448] sm:text-sm',
                                        'placeholder': field.vars.attr.placeholder|default('')
                                    }}) }}
                                    {{ form_errors(field, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                                </div>
                            {% endfor %}
                        </div>

                        <div class="flex flex-col sm:flex-row justify-end pt-5 space-y-2 sm:space-y-0 sm:space-x-3">
                            <a href="{{ path('app_organizations_index') }}" 
                               class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Cancelar
                            </a>
                            <button type="submit" 
                                    class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-[#213448] hover:bg-[#ECEFCA] hover:text-[#213448]">
                                {{ button_label|default('Guardar') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
