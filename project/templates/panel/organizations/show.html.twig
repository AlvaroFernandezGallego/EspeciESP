{% extends 'base.html.twig' %}

{% block title %}{{ organization.name }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-7xl mx-auto">
            {# Header with navigation #}
            <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center space-y-4 sm:space-y-0">
                <div class="flex items-center space-x-4">
                    <a href="{{ path('app_organizations_index') }}" class="flex items-center text-gray-600 hover:text-gray-900">
                        <i class="bi bi-arrow-left text-xl mr-2"></i>
                        <span class="text-sm font-medium">Volver</span>
                    </a>
                    <h1 class="text-xl sm:text-2xl font-bold text-gray-900">{{ organization.name }}</h1>
                </div>
                <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3 w-full sm:w-auto">
                    <a href="{{ path('app_organizations_edit', {'id': organization.id}) }}" 
                       class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <i class="bi bi-pencil-square mr-2"></i>Editar
                    </a>
                    <form method="post" action="{{ path('app_organizations_delete', {'id': organization.id}) }}" 
                          onsubmit="return confirm('¿Estás seguro que deseas eliminar esta organización?');" class="w-full sm:w-auto">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organization.id) }}">
                        <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50">
                            <i class="bi bi-trash mr-2"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>

            {# Main content #}
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6 bg-gray-50">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Información de la Organización</h3>
                    <p class="mt-1 text-sm text-gray-500">Detalles completos de la organización.</p>
                </div>
                <div class="border-t border-gray-200">
                    <dl class="divide-y divide-gray-200">
                        <div class="px-4 py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Nombre</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ organization.name }}</dd>
                        </div>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Región</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ organization.region.name }}</dd>
                        </div>
                        <div class="px-4 py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Dirección</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ organization.address }}</dd>
                        </div>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ organization.phoneNumber }}</dd>
                        </div>
                        <div class="px-4 py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Sitio Web</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                <a href="{{ organization.websiteUrl }}" target="_blank" 
                                   class="text-[#213448] hover:text-[#ECEFCA] hover:underline">
                                    {{ organization.websiteUrl }}
                                </a>
                            </dd>
                        </div>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Correo Electrónico</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                <a href="mailto:{{ organization.email }}" 
                                   class="text-[#213448] hover:text-[#ECEFCA] hover:underline">
                                    {{ organization.email }}
                                </a>
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
