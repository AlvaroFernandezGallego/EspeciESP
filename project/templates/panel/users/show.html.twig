{% extends 'base.html.twig' %}

{% block title %}Detalles del Usuario{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6 max-w-4xl">
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-[#213448]">Detalles del Usuario</h1>
                    <a href="{{ path('app_users_index') }}" class="inline-flex items-center px-4 py-2 border border-[#213448] rounded-md text-[#213448] bg-white hover:bg-[#ECEFCA] transition-colors">
                        <i class="bi bi-arrow-left me-2"></i>Volver al listado
                    </a>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-4">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500">Nombre de Usuario</h3>
                            <p class="mt-1 text-lg text-[#213448]">{{ user.username }}</p>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500">Email</h3>
                            <p class="mt-1 text-lg text-[#213448]">{{ user.email }}</p>
                        </div>
                        <div>
                            <h3 class="text-sm font-medium text-gray-500">Fecha de Registro</h3>
                            <p class="mt-1 text-lg text-[#213448]">{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : 'N/A' }}</p>
                        </div>
                    </div>
                </div>

                <div class="mt-8 pt-6 border-t border-gray-200 flex space-x-4">
                    <form method="post" action="{{ path('app_users_toggle_ban', {'id': user.id}) }}" class="inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_ban' ~ user.id) }}">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border {% if user.isBanned %}border-green-600 text-green-600 hover:bg-green-50{% else %}border-red-600 text-red-600 hover:bg-red-50{% endif %} rounded-md bg-white transition-colors">
                            <i class="bi {% if user.isBanned %}bi-unlock{% else %}bi-lock{% endif %} me-2"></i>
                            {% if user.isBanned %}
                                Habilitar Cuenta
                            {% else %}
                                Inhabilitar Cuenta
                            {% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
