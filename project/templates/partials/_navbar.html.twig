<script>
(function() {
    function initMobileMenu() {
        const button = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        const icon = document.getElementById('menu-icon');

        if (!button || !menu || !icon) return;

        let isOpen = false;

        function updateMenuState(shouldOpen) {
            isOpen = shouldOpen;
            menu.classList.toggle('hidden', !isOpen);
            button.setAttribute('aria-expanded', isOpen);

            // Cambia el icono del menú (hamburguesa o X)
            icon.innerHTML = isOpen
                ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />'
                : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
        }

        function toggleMenu(event) {
            event.stopPropagation();
            updateMenuState(!isOpen);
        }

        function closeMenu() {
            updateMenuState(false);
        }

        button.addEventListener('click', toggleMenu);

        // Cierra el menú si se hace clic fuera
        document.addEventListener('click', (event) => {
            const isClickInside = button.contains(event.target) || menu.contains(event.target);
            if (!isClickInside && isOpen) {
                closeMenu();
            }
        });

        document.addEventListener('keydown', (event) => {
            if (event.key === 'Escape' && isOpen) {
                closeMenu();
            }
        });

        // Cierra el menú en pantallas grandes si se redimensiona la ventana
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768 && isOpen) { 
                closeMenu();
            }
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMobileMenu);
    } else {
        initMobileMenu();
    }

    // Si usas Turbo (para aplicaciones como Hotwire), re-inicializa el menú cuando se renderiza una nueva página
    document.addEventListener('turbo:load', initMobileMenu);
    document.addEventListener('turbo:load', initMobileMenu);
    document.addEventListener('turbo:render', initMobileMenu);
})();
</script> 