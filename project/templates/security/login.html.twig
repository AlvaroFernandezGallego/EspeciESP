{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECEFCA] flex flex-col justify-center">
    <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="text-center mb-8">
            <h1 class="text-3xl sm:text-4xl font-semibold text-[#213448]">Panel de Administración</h1>
            <p class="mt-1 text-base sm:text-lg font-bold text-[#547792]">Inicia sesión para continuar</p>
        </div>

        <div class="bg-white shadow-lg rounded-lg p-8">
            <form method="post">
                {% if error %}
                    <div class="bg-red-50 text-red-600 p-3 rounded-md mb-4 text-sm">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="space-y-6">
                    <div>
                        <label for="email" class="block text-sm sm:text-base font-medium text-[#213448] mb-1">Email</label>
                        <input type="email" id="email" name="_username" value="{{ last_username }}" required autofocus 
                               class="w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]">
                    </div>

                    <div>
                        <label for="password" class="block text-sm sm:text-base font-medium text-[#213448] mb-1">Contraseña</label>
                        <input type="password" id="password" name="_password" required 
                               class="w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]">
                    </div>

                    <div>
                        <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-3 border border-transparent text-sm sm:text-base font-medium rounded-md text-[#ECEFCA] bg-[#213448] hover:bg-[#547792] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#547792] transition-colors duration-200">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('app_home') }}" class="text-sm sm:text-base text-[#547792] hover:text-[#213448] transition-colors duration-200">
                <i class="bi bi-arrow-left me-1"></i>Volver al inicio
            </a>
        </div>
    </div>
</div>
{% endblock %}
