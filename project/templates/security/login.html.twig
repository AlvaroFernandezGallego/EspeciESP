{% extends 'base.html.twig' %}

{% block title %}Acceso | EspeciESP{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#ECEFCA] flex flex-col justify-center">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-[#213448]">Acceso</h1>
        </div>

        <div class="bg-white shadow-lg rounded-lg p-8">
            <form method="post">
                {% if error %}
                    <div class="bg-red-50 text-red-600 p-3 rounded-md mb-4 text-sm">
                        {{ error_message }}
                    </div>
                {% endif %}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-[#213448] mb-1">Correo electrónico</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]" required autofocus>
                </div>

                <div class="mb-6">
                    <label for="password" class="block text-sm font-medium text-[#213448] mb-1">Contraseña</label>
                    <input type="password" name="password" id="password" class="w-full px-4 py-3 border border-[#ECEFCA] rounded-md shadow-sm text-sm focus:ring-[#547792] focus:border-[#547792]" required>
                </div>

                <button type="submit" class="w-full flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-[#ECEFCA] bg-[#213448] hover:bg-[#547792] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#547792] transition-colors">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Acceder
                </button>
            </form>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('app_register') }}" class="text-sm text-[#547792] hover:text-[#213448] transition-colors">
                ¿No tienes cuenta? Regístrate
            </a>
        </div>
    </div>
</div>
{% endblock %}
